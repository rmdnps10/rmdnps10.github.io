    </section>
  );
}

5.6 ProjectGrid.jsx
// src/components/portfolio/ProjectGrid.jsx
import React from 'react';
import data from '../../data/projects.json';
import ProjectCard from './_ProjectCard';

const ORDER = ['Front-end', 'Full-stack', 'AI', 'Art-Tech'];

export default function ProjectGrid() {
  // 고정 도메인 태그로 그룹화
  const byGroup = ORDER.map(tag => ({
    tag,
    items: data.filter(p => (p.domainTags || []).includes(tag))
  })).filter(g => g.items.length);

  return (
    <section id="projects" className="container" style={{ padding: '80px 20px' }}>
      <h2>All Projects</h2>
      {byGroup.map(group => (
        <div key={group.tag} style={{ marginTop: 24 }}>
          <h3>{group.tag}</h3>
          <div className="grid" style={{ display: 'grid', gap: 16, gridTemplateColumns: 'repeat(auto-fit, minmax(260px, 1fr))' }}>
            {group.items.map(p => <ProjectCard key={p.slug} {...p} />)}
          </div>
        </div>
      ))}
    </section>
  );
}

